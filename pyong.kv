#:kivy 1.0.9

<PyongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PyongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PyongGame>:
    pyong_ball: pyong_ball
    player1: player_left
    player2: player_right

    winner_label: winner_label

    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)

    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    Label:
        id: winner_label
        font_size: 100
        center_x: root.width / 3
        center_y: self.parent.center_y
        width: self.parent.width / 3
        halign: 'center'
        valign: 'center'

    PyongBall:
        id: pyong_ball
        center: self.parent.center

    PyongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        name: 'Player 1'

    PyongPaddle:
        id: player_right
        x: root.width-self.width
        center_y: root.center_y
        name: 'Player 2'
